{
  "compilerOptions": {
    /* Basic Options */
    "target": "es2016",
    "module": "commonjs",
    "lib": [
      "dom",
      "es6",
      "esnext.asynciterable"
    ],
    "allowJs": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "strictPropertyInitialization": false,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@logger":     ["./src/core/common/logger"],
      "@ports*":     ["./src/ports"],
      "@adapters*":  ["./src/adapters"],
      "@services*":  ["./src/core/services*"],
      "@entities*":  ["./src/core/entities*"],
      "@interfaces": ["./src/core/interfaces"],
      "@resolvers":  ["./src/modules/graphql/resolvers"],
      "@directives": ["./src/modules/graphql/directives"],
      "@database*":  ["./src/modules/database*"],
      "@apiErrors":  ["./src/core/entities/ApiError"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.js"
  ]
}