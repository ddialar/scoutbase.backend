{
  "name": "scoutbase.backend",
  "version": "1.0.0",
  "description": "Code test implmementing a basic GraphQL based on API.",
  "main": "src/server.ts",
  "scripts": {
    "build:dev": "webpack --config ./webpack/webpack.dev.js",
    "build:prod": "webpack --config ./webpack/webpack.prod.js",
    "test": "npm run test:clear_cache; NODE_OPTIONS=--max_old_space_size=4096 jest --runInBand --watch",
    "test:clear_cache": "jest --clearCache"
  },
  "keywords": [
    "Typegraphql",
    "GraphQL",
    "Webpack",
    "Nodemon",
    "NodeJS",
    "Backend",
    "API"
  ],
  "author": "Dailos Rafael DÃ­az Lara <ddialar@gmail.com>",
  "license": "CC 4.0",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/graphql": "^14.5.0",
    "@types/jest": "^24.0.18",
    "@types/jsonwebtoken": "^8.3.3",
    "@types/node": "^12.7.3",
    "@types/webpack-env": "^1.14.0",
    "class-transformer": "^0.2.3",
    "clean-webpack-plugin": "^3.0.0",
    "dotenv": "^8.1.0",
    "dotenv-webpack": "^1.7.0",
    "jest": "^24.9.0",
    "nodemon-webpack-plugin": "^4.0.8",
    "ts-jest": "^24.0.2",
    "ts-loader": "^6.0.4",
    "tslint": "^5.19.0",
    "typescript": "^3.6.2",
    "webpack": "^4.39.3",
    "webpack-cli": "^3.3.7",
    "webpack-merge": "^4.2.2",
    "webpack-node-externals": "^1.7.2"
  },
  "dependencies": {
    "apollo-server": "^2.9.1",
    "axios": "^0.19.0",
    "bcryptjs": "^2.4.3",
    "graphql-import": "^0.7.1",
    "graphql-tools": "^4.0.5",
    "jsonwebtoken": "^8.5.1",
    "log4js": "^4.5.1",
    "mysql": "^2.17.1",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.18"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json",
        "diagnostics": false
      }
    },
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/*",
      "<rootDir>/config/*",
      "<rootDir>/docs/*",
      "<rootDir>/dist/*",
      "<rootDir>/logs/*"
    ],
    "modulePaths": [
      "src"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "moduleNameMapper": {
      "@ports(.*)$": "<rootDir>/src/ports$1",
      "@adapters(.*)$": "<rootDir>/src/adapters$1",
      "@interfaces(.*)$": "<rootDir>/src/core/interfaces$1",
      "@services(.*)$": "<rootDir>/src/core/services$1",
      "@logger": "<rootDir>/src/core/common/logger",
      "@graphql(.*)$": "<rootDir>/src/modules/graphql$1",
      "@database(.*)$": "<rootDir>/src/modules/database$1"
    },
    "verbose": false,
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|ts)$": "ts-jest"
    }
  }
}
